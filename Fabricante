function Carro(fabricante, modelo, cor, ano) {
		this.fabricante = fabricante;
		this.modelo = modelo;
		this.cor = cor;
		this.ano = ano;
		this.nomeCompleto = function () {


			imprima(this.fabricante, + " " + this.modelo + " " +  this.cor + " " +  this.ano);
		};
	}
console.log (carro);


function Cliente(nome, sobrenome, telefone, email){

	this.nome = nome;
	this.sobrenome = sobrenome;
	this.telefone = telefone;
	this.email = email;
	this.fichaCliente = function()
		{
			imprima("Nome:"  + this.nome + " " + this.sobrenome);
			imprima("Telefone: " + this.sobrenome);
			imprima("E-mail:" + this.email)

	}}


	let Clientes = new Array();

Clientes.push( new Cliente("Rafaela", "Assis","---","==="));
Clientes.push(new Cliente("Fernada","Gualberto","234-5678","fernada gualberto.com"));
Clientes.push(new Cliente("Nayara","Fonseca","1478-6321", "NayaraFonseca.com"));

for(linha of Clientes)
{
	linha.fichaCliente();
	imprima("");
}

